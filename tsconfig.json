{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": ".",
		"strict": true,
		"noUncheckedIndexedAccess": false,
		"allowSyntheticDefaultImports": true,
		"noEmit": true,
		"incremental": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"@/app/*": ["app/*"],
			"@/trex": ["lib/trex"],
			"@/trex/*": ["lib/trex/*"],
			"@/parser/*": ["lib/parser/*"],
			"@/utils/*": ["lib/utils/*"],
			"@/types/*": ["lib/types/*"],
			"@/tests/*": ["tests/*"],
			"@/my-tests/*": ["my-test-stuff/*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": [
		"node_modules",
		"build",
		"coverage",
		"z_old_code"
	]
}
